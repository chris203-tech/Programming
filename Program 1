#include <iostream>
using namespace std;

    void displayResults(string names[], double averages[], char grades[], int numStudents) {
    cout << "\nResults:" << endl;
    cout << "------------------------------" << endl;
    cout << "Student   | Average | Grade" << endl;
    cout << "------------------------------" << endl;

    for (int i = 0; i < numStudents; i++) {
        cout << names[i] << " | " << averages[i] << " | " << grades[i] << endl;
    }
    cout << "------------------------------" << endl;
}

int main() {
    int numStudents;
     double total = 0;
   
    cout << "Enter the number of students: ";
    cin >> numStudents;

  
    string* names = new string[numStudents];
    char* grades = new char[numStudents];
    double* averages = new double[numStudents];

  
    for (int i = 0; i < numStudents; i++) {
        cout << "\nEnter name of student " << i + 1 << ": ";
        cin >> names[i];

        int numTests;
        cout << "Enter number of test scores: ";
        cin >> numTests;

        

     
        for (int j = 0; j < numTests; j++) {
            int score;
            cout << "Enter score " << j + 1 << ": ";
            cin >> score;
            total += score;
        }

       
        averages[i] = total / numTests;


        if (averages[i] >= 90)
            grades[i] = 'A';
        else if (averages[i] >= 80)
            grades[i] = 'B';
        else if (averages[i] >= 70)
            grades[i] = 'C';
        else if (averages[i] >= 60)
            grades[i] = 'D';
        else
            grades[i] = 'F';
    }

   
    displayResults(names, averages, grades, numStudents);

  
    delete[] names;
    delete[] grades;
    delete[] averages;

    return 0;
}
